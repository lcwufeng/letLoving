<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/mainbackground" >

    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

            <ImageButton
                android:id="@+id/lovevoice"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/lovevoice" />

            <ImageButton
                android:id="@+id/lovecamera"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/lovevoice"
                android:background="@drawable/camera" />


            <ImageButton
                android:id="@+id/lovecalendar"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_below="@id/lovevoice"
                android:layout_marginTop="5dp"
                android:background="@drawable/lovecalendar" />

            <ImageButton
                android:id="@+id/loveus"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/lovecalendar"
                android:layout_below="@id/lovevoice"
                android:background="@drawable/aboutus" />

    </RelativeLayout>

</LinearLayout>